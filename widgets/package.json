{
  "name": "entando-pam-widgets",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "dependencies": {
    "@entando/ui": "^0.2.0",
    "@material-ui/core": "^4.8.1",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.37",
    "classnames": "^2.2.6",
    "clsx": "^1.0.4",
    "date-fns": "^2.8.1",
    "formik": "^2.0.8",
    "i18next": "^17.3.1",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-i18next": "^10.13.2",
    "react-inlinesvg": "^1.2.0",
    "react-jsonschema-form": "^1.8.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "rjsf-material-ui": "^0.3.9"
  },
  "scripts": {
    "start": "REACT_APP_LOCAL=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --verbose --setupFilesAfterEnv ./setupTests.js",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "npx eslint --fix ./src",
    "i18n": "./node_modules/i18next-scanner/bin/cli.js --config ./scripts/i18next-scanner.config.js"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb",
      "prettier"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      }
    },
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/state-in-constructor": 0,
      "no-nested-ternary": 0,
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/runtime": "^7.8.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "array-move": "^2.2.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "i18next-scanner": "^2.10.3",
    "jest-dom": "^4.0.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-junit": "^10.0.0",
    "lint-staged": "^9.5.0",
    "patternfly": "^3.59.4",
    "patternfly-react": "^1.19.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "react-sortable-hoc": "^1.10.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/i18n/**/*.*",
      "!src/**/mocks/**/*.*",
      "!src/**/types/**/*.*",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/",
      "!src/**/custom-elements/*.*",
      "!src/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
